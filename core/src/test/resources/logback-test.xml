<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for test output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5p %5r --- [%15.15t] %-40.40logger{39} : %m%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Suppress CoordinatedShutdown warnings during test shutdown -->
    <logger name="org.apache.pekko.actor.CoordinatedShutdown" level="ERROR"/>

    <!-- Application logging -->
    <logger name="io.github.seonwkim" level="INFO"/>
</configuration>
